#:kivy 2.2.1
#:import Factory kivy.factory.Factory

<LandingWindow>:

    name_input: name_input
    email_input: email_input
    password_input: password_input

    name: "landing"
    Screen:

        MDBottomNavigation:
            panel_color: (255/255, 233/255, 234/255, 1)

            MDBottomNavigationItem:
                name: 'home'
                text: 'Home Page'
                icon: 'home'
                font_size: 15
                on_tab_press:
                    root.clearchange()
                    root.cleardelete()
                    root.reset_liked_list()

                MDBoxLayout:
                    orientation: 'vertical'
                    md_bg_color: (171/255, 196/255, 212/255, 1)
                
                    MDBoxLayout:
                        radius: [0,0,0,0]
                        size_hint_x: .8
                        size_hint_y: .8
                        pos_hint: {"center_x": 0.5, "center_y": 0.8}
                        Image:
                            source: './images/petpals_logo.png'
                            size_hint: .3, .3
                            pos_hint: {'center_x': 0.5, 'center_y': 0.8}

                MDLabel:
                    text: root.news_title + '\n' + root.news_body
                    text_size: self.size
                    text_color: (56/255, 45/255, 94/255, 1)
                    size_hint: None, None
                    width: root.width*0.5
                    height: root.height*0.2
                    md_bg_color: (255/255, 233/255, 234/255, 1)
                    pos_hint: {"center_x": 0.5, "center_y": 0.55}

                MDBoxLayout:
                    radius: [0,0,0,0]
                    size_hint_x: 0.5
                    size_hint_y: 0.130
                    pos_hint: {"center_x": 0.5, "center_y": 0.35}

                    MDFillRoundFlatButton:
                        text: "Dogs"
                        text_color: (56/255, 45/255, 94/255, 1)
                        font_style: "Button"
                        font_size: self.width * 0.065
                        size_hint_x: .9
                        size_hint_y: 0.65
                        md_bg_color: (255/255, 233/255, 234/255, 1)
                        pos_hint: {"center_x": 0.5, "center_y": 0.35}
                        on_release:
                            app.root.current = "dogsearch"
                            root.manager.transition.direction = "left"

                MDBoxLayout:
                    radius: [0,0,0,0]
                    size_hint_x: 0.5
                    size_hint_y: 0.130
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}

                    MDFillRoundFlatButton:
                        text: "Cats"
                        text_color: (56/255, 45/255, 94/255, 1)
                        font_style: "Button"
                        font_size: self.width * 0.065
                        size_hint_x: .9
                        size_hint_y: 0.65
                        md_bg_color: (255/255, 233/255, 234/255, 1)
                        pos_hint: {"center_x": 0.5, "center_y": 0.35}
                        on_release:
                            app.root.current = "catsearch"
                            root.manager.transition.direction = "left"

                MDBoxLayout:
                    radius: [0,0,0,0]
                    size_hint_x: 0.5
                    size_hint_y: 0.130
                    pos_hint: {"center_x": 0.5, "center_y": 0.15}

                    MDFillRoundFlatButton:
                        text: "Other"
                        text_color: (56/255, 45/255, 94/255, 1)
                        font_style: "Button"
                        font_size: self.width * 0.065
                        size_hint_x: .9
                        size_hint_y: 0.65
                        md_bg_color: (255/255, 233/255, 234/255, 1)
                        pos_hint: {"center_x": 0.5, "center_y": 0.35}
                        on_release:
                            app.root.current = "othersearch"
                            root.manager.transition.direction = "left"


            MDBottomNavigationItem:
                name: 'account'
                text: 'Account'
                icon: 'account'
                on_tab_press:
                    root.clearchange()
                    root.cleardelete()
                    root.reset_liked_list()

                GridLayout:
                    cols:1
                    size: root.width, root.height

                    padding: 70
                    spacing: 30

                    GridLayout:
                        cols:2
                        size: root.width, root.height

                        padding: 15
                        spacing: 25


                        Label:
                            text: "Change your name? \nPlease enter your new name:"
                            color: (56/255, 45/255, 94/255, 1)
                            background_color: (255/255, 233/255, 234/255, 1)
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        TextInput:
                            id: name_input
                            multiline:False
                        Label:
                            text: "Change email? \nPlease enter your new E-mail:"
                            color: (56/255, 45/255, 94/255, 1)
                            background_color: (255/255, 233/255, 234/255, 1)
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        TextInput:
                            id: email_input
                            multiline:False
                        Label:
                            text: "Change password? \nPlease enter your new password:"
                            color: (56/255, 45/255, 94/255, 1)
                            background_color: (255/255, 233/255, 234/255, 1)
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        TextInput:
                            id: password_input
                            multiline:False

                    MDBoxLayout:
                        radius: [0,0,0,0]
                        size_hint_x: 0.5
                        size_hint_y: 0.170
                        pos_hint: {"center_x": 0.5, "center_y": 0.35}

                        Button:
                            text: "Submit Changes"
                            font_style: "Button"
                            font_size: self.width * 0.065
                            size_hint_x: .9
                            size_hint_y: 0.7
                            background_normal: ''
                            background_color: (0, 187/255, 224/255, 1)
                            on_press: root.update_account()
                            on_release:
                                root.cleardelete()
                                root.clearchange()
                                root.press_change()

                    MDBoxLayout:
                        radius: [0,0,0,0]
                        size_hint_x: 0.5
                        size_hint_y: 0.170
                        pos_hint: {"center_x": 0.5, "center_y": 0.25}

                        Button:
                            text: "Log Out"
                            font_style: "Button"
                            font_size: self.width * 0.065
                            size_hint_x: .9
                            size_hint_y: 0.7
                            background_normal: ''
                            background_color: (222/255, 23/255, 63/255, 1)
                            on_press: root.logout()
                            on_release:
                                root.clearchange()
                                root.cleardelete()
                                app.root.current = "login"
                                root.manager.transition.direction = "right"

                    MDBoxLayout:
                        radius: [0,0,0,0]
                        size_hint_x: 0.5
                        size_hint_y: 0.170
                        pos_hint: {"center_x": 0.5, "center_y": 0.15}

                        Button:
                            text: "Delete Account"
                            font_style: "Button"
                            font_size: self.width * 0.065
                            size_hint_x: .9
                            size_hint_y: 0.7
                            background_normal: ''
                            background_color: (222/255, 23/255, 63/255, 1)
                            on_press: root.delete_account()
                            on_release:
                                app.root.current = "login"
                                root.manager.transition.direction = "right"
                                root.clearchange()
                                root.cleardelete()
                                root.press_delete()
                                # PLACEHOLDER: should also go back to login screen?

            MDBottomNavigationItem:
                name: 'liked_animals'
                text: 'Liked Animals'
                icon: 'heart'
                on_tab_press:
                    root.clearchange()
                    root.cleardelete()
                    root.show_liked_animals()
                MDBoxLayout:
                    orientation: 'vertical'
                    md_bg_color: (171/255, 196/255, 212/255, 1)
                Image:
                    source: './images/petpals_logo.png'
                    size_hint: .4, .4
                    pos_hint: {'center_x': 0.5, 'center_y': 0.85}
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'top'
                    padding: (20,410)
                    MDList:
                        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                        id: liked_list



        Widget:
            size_hint_y: None
            height: 10