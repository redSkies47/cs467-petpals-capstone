#:kivy 2.2.1
#:import Factory kivy.factory.Factory

<CatProfile>

    name: "catprofile"
    Screen:
	BoxLayout:
		orientation: "vertical"
		size: root.width, root.height

		Carousel:
			direction: "right"

            GridLayout:
                cols:1
                size: root.width, root.height

                padding: 50
                spacing: 50

                # Cat Information
                GridLayout:
                    cols: 1
                    background_color: (255/255, 233/255, 234/255, 1)
                    canvas.before:
                        Color:
                            rgba: self.background_color
                        Rectangle:
                            size: self.size
                            pos: self.pos
                    font_size: 35
                    pos_hint: {"center_x": 0.5, "center_y": .75}
                    # Availability
                    Label:
                        text: "Availability: " + root.availability
                        color: (56/255, 45/255, 94/255, 1)
                    # Name
                    Label:
                        text: "Name: " + root.dog_name
                        color: (56/255, 45/255, 94/255, 1)
                    # Birthdate
                    Label:
                        text: "Birthdate: " + root.birthdate
                        color: (56/255, 45/255, 94/255, 1)
                    # Gender
                    Label:
                        text: "Gender: " + root.gender
                        color: (56/255, 45/255, 94/255, 1)
                    # Breed
                    Label:
                        text: "Breed: " + root.breed
                        color: (56/255, 45/255, 94/255, 1)
                    # Size
                    Label:
                        text: "Size: " + root.size_in_lbs + " lbs"
                        color: (56/255, 45/255, 94/255, 1)
                    # Summary
                    Label:
                        padding: 10
                        text: "Summary:\n" + root.summary
                        text_size: self.size
                        color: (56/255, 45/255, 94/255, 1)
                    # Date Created
                    Label:
                        text: "At the shelter since: " + root.date_created
                        color: (56/255, 45/255, 94/255, 1)

                MDBoxLayout:
                    radius: [0,0,0,0]
                    size_hint_x: 0.5
                    size_hint_y: 0.130
                    pos_hint: {"center_x": 0.5, "center_y": 0.35}

                    MDFillRoundFlatButton:
                        text: "Add to Liked List"
                        text_color: (1,1,1,1)
                        font_style: "Button"
                        font_size: self.width * 0.035
                        size_hint_x: .6
                        size_hint_y: 0.65
                        md_bg_color: (0, 187/255, 224/255, 1)
                        pos_hint: {"center_x": 0.5, "center_y": 0.7}
                        on_release:
                            root.add_liked_animal()

                MDBoxLayout:
                    radius: [0,0,0,0]
                    size_hint_x: 0.5
                    size_hint_y: 0.130
                    pos_hint: {"center_x": 0.5, "center_y": 0.2}

                    MDFillRoundFlatButton:
                        text: "Back To Browse"
                        text_color: (1,1,1,1)
                        font_style: "Button"
                        font_size: self.width * 0.035
                        size_hint_x: .6
                        size_hint_y: 0.65
                        md_bg_color: (222/255, 23/255, 63/255, 1)
                        pos_hint: {"center_x": 0.5, "center_y": 0.7}
                        on_release:
                            root.remove_added_msg()
                            app.root.current = "catbrowse"
                            root.manager.transition.direction = "right"
            Image:
				source: '../images/petpals_logo.png'



<CatBrowseWindow>:

    name_input: name_input
    email_input: email_input
    password_input: password_input

    name: "catbrowse"
    Screen:

        MDBottomNavigation:
            panel_color: (255/255, 233/255, 234/255, 1)

            MDBottomNavigationItem:
                id: "cattab"
                name: 'catpage'
                text: "Browse Cats"
                icon: "cat"
                font_size: 15
                on_tab_press:
                    root.clearchange()
                    root.cleardelete()
                    root.reset_liked_list()
                GridLayout:
                    cols:1
                    size: root.width, root.height

                    padding: 150
                    spacing: 50
                    Button:
                        text:"Show Results"
                        group: "results"
                        size_hint_y: None
                        height:80
                        font_size: 30
                        background_normal: ''
                        background_color: (0, 187/255, 224/255, 1)
                        on_release:
                            root.add_cat()
                    GridLayout:
                        id: cat_grid
                        cols:2
                        padding: 150
                        spacing: 30
                    Button:
                        text: "Back To Search"
                        size_hint_y: None
                        height:80
                        font_size: 30
                        background_normal: ''
                        background_color: (222/255, 23/255, 63/255, 1)
                        text_autoupdate: True
                        on_release:
                            root.remove_cat()
                            app.root.current = "catsearch"
                            root.manager.transition.direction = "right"

            MDBottomNavigationItem:
                name: 'home'
                text: 'Home Page'
                icon: 'home'
                font_size: 15
                on_tab_press:
                    app.root.current = "landing"
                    root.manager.transition.direction = "right"
                    root.clearchange()
                    root.cleardelete()
                    root.reset_liked_list()

                MDBoxLayout:
                    orientation: 'vertical'
                    md_bg_color: (171/255, 196/255, 212/255, 1)
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'top'
                        padding: 20
                        FitImage:
                            source: '../images/petpals_logo.png'
                            size_hint: .3, .3
                            pos_hint: {'center_x': 0.5, 'center_y': 0.75}

                MDBoxLayout:
                    radius: [0,0,0,0]
                    size_hint_x: 0.6
                    size_hint_y: 0.2
                    pos_hint: {"center_x": 0.5, "center_y": 0.5}

                    MDLabel:
                        text: "Browse Cats at bottom left!"
                        font_style: "Button"
                        valign: "center"
                        halign: "center"
                        text_size: self.size
                        text_color: (56/255, 45/255, 94/255, 1)
                        size_hint_x: .9
                        size_hint_y: 0.65
                        md_bg_color: (255/255, 233/255, 234/255, 1)
                        pos_hint: {"center_x": 0.5, "center_y": 0.55}

                MDBoxLayout:
                    radius: [0,0,0,0]
                    size_hint_x: 0.6
                    size_hint_y: 0.2
                    pos_hint: {"center_x": 0.5, "center_y": 0.37}

                    MDLabel:
                        text: "Or"
                        font_style: "Button"
                        valign: "center"
                        halign: "center"
                        text_size: self.size
                        text_color: (56/255, 45/255, 94/255, 1)
                        size_hint_x: .9
                        size_hint_y: 0.65
                        pos_hint: {"center_x": 0.5, "center_y": 0.55}

                MDBoxLayout:
                    radius: [0,0,0,0]
                    size_hint_x: 0.6
                    size_hint_y: 0.2
                    pos_hint: {"center_x": 0.5, "center_y": 0.25}

                    MDLabel:
                        text: "Click the Home Page tab to return Home!"
                        font_style: "Button"
                        valign: "center"
                        halign: "center"
                        text_size: self.size
                        text_color: (56/255, 45/255, 94/255, 1)
                        size_hint_x: .9
                        size_hint_y: 0.65
                        md_bg_color: (255/255, 233/255, 234/255, 1)
                        pos_hint: {"center_x": 0.5, "center_y": 0.55}


            MDBottomNavigationItem:
                name: 'account'
                text: 'Account'
                icon: 'account'
                on_tab_press:
                    root.reset_liked_list()

                GridLayout:
                    cols:1
                    size: root.width, root.height

                    padding: 70
                    spacing: 30

                    GridLayout:
                        cols:2
                        size: root.width, root.height

                        padding: 15
                        spacing: 25


                        Label:
                            text: "Change your name? \nPlease enter your new name:"
                            color: (56/255, 45/255, 94/255, 1)
                            background_color: (255/255, 233/255, 234/255, 1)
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        TextInput:
                            id: name_input
                            multiline:False
                        Label:
                            text: "Change email? \nPlease enter your new E-mail:"
                            color: (56/255, 45/255, 94/255, 1)
                            background_color: (255/255, 233/255, 234/255, 1)
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        TextInput:
                            id: email_input
                            multiline:False
                        Label:
                            text: "Change password? \nPlease enter your new password:"
                            color: (56/255, 45/255, 94/255, 1)
                            background_color: (255/255, 233/255, 234/255, 1)
                            canvas.before:
                                Color:
                                    rgba: self.background_color
                                Rectangle:
                                    size: self.size
                                    pos: self.pos
                        TextInput:
                            id: password_input
                            multiline:False

                    MDBoxLayout:
                        radius: [0,0,0,0]
                        size_hint_x: 0.5
                        size_hint_y: 0.170
                        pos_hint: {"center_x": 0.5, "center_y": 0.35}

                        Button:
                            text: "Submit Changes"
                            font_style: "Button"
                            font_size: self.width * 0.065
                            size_hint_x: .9
                            size_hint_y: 0.7
                            background_normal: ''
                            background_color: (0, 187/255, 224/255, 1)
                            on_press: root.update_account()
                            on_release:
                                root.cleardelete()
                                root.clearchange()
                                root.press_change()

                    MDBoxLayout:
                        radius: [0,0,0,0]
                        size_hint_x: 0.5
                        size_hint_y: 0.170
                        pos_hint: {"center_x": 0.5, "center_y": 0.25}

                        Button:
                            text: "Log Out"
                            font_style: "Button"
                            font_size: self.width * 0.065
                            size_hint_x: .9
                            size_hint_y: 0.7
                            background_normal: ''
                            background_color: (0, 187/255, 224/255, 1)
                            on_press: root.logout()
                            on_release:
                                root.clearchange()
                                root.cleardelete()
                                app.root.current = "login"
                                root.manager.transition.direction = "right"

                    MDBoxLayout:
                        radius: [0,0,0,0]
                        size_hint_x: 0.5
                        size_hint_y: 0.170
                        pos_hint: {"center_x": 0.5, "center_y": 0.15}

                        Button:
                            text: "Delete Account"
                            font_style: "Button"
                            font_size: self.width * 0.065
                            size_hint_x: .9
                            size_hint_y: 0.7
                            background_normal: ''
                            background_color: (222/255, 23/255, 63/255, 1)
                            on_press: root.delete_account()
                            on_release:
                                app.root.current = "login"
                                root.manager.transition.direction = "right"
                                root.clearchange()
                                root.cleardelete()
                                root.press_delete()
                                # PLACEHOLDER: should also go back to login screen?

            MDBottomNavigationItem:
                name: 'liked_animals'
                text: 'Liked Animals'
                icon: 'heart'
                on_tab_press:
                    root.clearchange()
                    root.cleardelete()
                    root.show_liked_animals()
                MDBoxLayout:
                    orientation: 'vertical'
                    md_bg_color: (171/255, 196/255, 212/255, 1)
                    AnchorLayout:
                        anchor_x: 'center'
                        anchor_y: 'top'
                        padding: 20
                        FitImage:
                            source: '../images/petpals_logo.png'
                            size_hint: .3, .3
                            pos_hint: {'center_x': 0.5, 'center_y': 0.75}
                AnchorLayout:
                    anchor_x: 'center'
                    anchor_y: 'top'
                    padding: (20,410)
                    MDList:
                        pos_hint: {'center_x': 0.5, 'center_y': 0.6}
                        id: liked_list


        Widget:
            size_hint_y: None
            height: 10

<CatSearch>
    name: "catsearch"
    canvas.before:
        Color:
            rgba: (171/255, 196/255, 212/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size
    MDBoxLayout:
        orientation: "vertical"
        MDBoxLayout:
            radius: [0,0,0,0]
            size_hint_x: 0.5
            size_hint_y: 0.5
            pos_hint: {"center_x": 0.5, "center_y": 0.45}
            MDLabel:
                text: "Search For Cats by Breed, Disposition, and Recency"
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                text_color: (56/255, 45/255, 94/255, 1)
                size_hint:.5,.5
                md_bg_color: (255/255, 233/255, 234/255, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.6}

        GridLayout:
            padding:50
            cols:2

            Label:
                id: click_label
                text: "Select a Breed:"
                font_size: self.width * 0.065
                size_hint_x: .9
                size_hint_y: 0.7
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Spinner:
                id: spinner_id
                text:"Click Here For Breeds"
                values: root.breeds
                color: (1, 1, 1, 1)
                background_normal: ''
                background_color: (0, 187/255, 224/255, 1)
                on_text: root.breed_dropdown(spinner_id.text)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

            Label:
                text: "Select Disposition(s):"
                font_size: self.width * 0.065
                size_hint_x: .9
                size_hint_y: 0.7
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            Dispositions:
                id: Dispositions
                values: root.dispositions
            Label:
                text: "List by most recent"
                font_size: self.width * 0.065
                size_hint_x: .9
                size_hint_y: 0.7
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            CheckBox:
                group: "recency"
                on_active: root.checkbox_most_recent(self, self.active)
                color: (1, 1, 1, 2)
                background_color: (255/255, 233/255, 234/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            Label:
                text: "List by least recent"
                font_size: self.width * 0.065
                size_hint_x: .9
                size_hint_y: 0.7
                color: (56/255, 45/255, 94/255, 1)
                background_color: (255/255, 233/255, 234/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
            CheckBox:
                group: "recency"
                on_active: root.checkbox_least_recent(self, self.active)
                color: (1, 1, 1, 2)
                background_normal: ''
                background_color: (255/255, 233/255, 234/255, 1)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

        MDBoxLayout:
            radius: [0,0,0,0]
            size_hint_x: 0.5
            size_hint_y: 0.130
            pos_hint: {"center_x": 0.5, "center_y": 0.35}

            MDFillRoundFlatButton:
                text: "Search Now"
                text_color: (1,1,1,1)
                font_style: "Button"
                font_size: self.width * 0.065
                size_hint_x: .9
                size_hint_y: 0.65
                md_bg_color: (0, 187/255, 224/255, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.7}
                on_release:
                    app.root.current = "catbrowse"
                    root.manager.transition.direction = "left"

        MDBoxLayout:
            radius: [0,0,0,0]
            size_hint_x: 0.5
            size_hint_y: 0.130
            pos_hint: {"center_x": 0.5, "center_y": 0.2}

            MDFillRoundFlatButton:
                text: "Back To Home"
                text_color: (1,1,1,1)
                font_style: "Button"
                font_size: self.width * 0.065
                size_hint_x: .9
                size_hint_y: 0.65
                md_bg_color: (222/255, 23/255, 63/255, 1)
                pos_hint: {"center_x": 0.5, "center_y": 0.7}
                on_release:
                    app.root.current = "landing"
                    root.manager.transition.direction = "right"
